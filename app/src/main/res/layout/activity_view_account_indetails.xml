<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".view_account_indetails">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape"
        android:gravity="center">

    </View>




    <TextView
        android:id="@+id/category_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="@string/account_indetail__28_june_2019"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="606dp"
        android:layout_below="@+id/category_date1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/card"
        android:elevation="5dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/adddate5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtadddate2"

            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-150dp"
            android:text="@string/view_account_details_history"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/view_account_indetails_name"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/accountName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/line1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bank"

            android:contentDescription="@string/account_indetail_todo" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/bank_account"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/Amount_text"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_name"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/account_indetail_rs_25000_00"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Amount_text"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/acc"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/bank_account"
            android:textSize="16sp"
            android:textStyle=""

            />

        <TextView
            android:id="@+id/txtlasttransdate"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adddate"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="164dp"
            android:layout_toEndOf="@+id/txtadddate2"
            android:text="2019/02/10"
            android:textSize="12sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/ltransamount"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adddate"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="164dp"
            android:layout_toEndOf="@+id/txtlasttransdate"
            android:text="Rs.2500.00"
            android:textSize="12sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/txtadddate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adddate"

            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="164dp"
            android:text="2018/02/25"
            android:textSize="12sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/account_indetail_account_number"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/adddate"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"
            android:text="@string/add_account"
            android:textSize="14sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/lasttranactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="12dp"
            android:layout_marginTop="90dp"

            android:layout_toEndOf="@+id/adddate"
            android:text="@string/lasttrans"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/adddate3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"

            android:layout_marginTop="90dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/lasttranactionDate"
            android:text="Amount"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_text"
            android:layout_marginStart="23dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/category_icon"
            android:text="@string/account_indetail__32551844"
            android:textSize="14sp"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview"
            android:layout_width="378dp"
            android:layout_height="221dp"
            android:layout_below="@+id/adddate5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp">

        </androidx.recyclerview.widget.RecyclerView>

        <ImageButton
            android:id="@+id/edit_btn02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/category_name"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blue"
            android:contentDescription="@string/account_indetail_todo"
            android:layout_below="@id/line1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/edit_btn" />

        <ImageButton

            android:id="@+id/delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/line1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="6dp"
            android:layout_toRightOf="@id/edit_btn02"
            android:background="@drawable/circle"
            android:contentDescription="@string/account_indetail_todo"
            android:src="@drawable/delete_btn" />

    </RelativeLayout>











</RelativeLayout>