<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".Expenses">





        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:background="@drawable/shape"

             />

    <RelativeLayout

        android:id="@+id/cardViewAccount3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="6dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/dateNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:elevation="5dp"
            android:text="@string/overview"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/date_hr"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/dateNum"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_hr"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="5dp"
            android:text="@string/inflow"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_hr"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:elevation="5dp"
            android:text="@string/AmountV4"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/outflow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inflow"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="14dp"
            android:elevation="5dp"
            android:text="@string/AmountV5"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_marginStart="14dp"
            android:layout_marginTop="5dp"
            android:elevation="5dp"
            android:text="@string/outflow"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:elevation="12dp"
        android:text="@string/this_month2"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/september_2019ex"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_alignParentEnd="false"
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/dailybtn"
            android:backgroundTint="@color/lightGray"
            android:layout_toStartOf="@+id/button3"
            android:text="@string/monthly"
            android:textAllCaps="false"
            android:textColor="@color/btnGray"
            android:textSize="12sp"
            android:textStyle="normal"
            />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/monthlybtn"
            android:text="@string/daily"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="normal"
             />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/ttoam"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="@string/AmountV3"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/textView3" />


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/left_icon"
            android:paddingEnd="20dp"
            android:layout_toLeftOf="@+id/textView2"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/right_icon"
            android:layout_toRightOf="@+id/textView2"
             />




    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/cardViewAccount3"

        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dailyRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/back"
            >
            <ImageView
               android:id="@+id/back2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/back"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:text="No Transactions Available !"
                android:layout_below="@+id/back2"
                />
        </RelativeLayout>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_expenses_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_add"

        app:backgroundTint="@color/blue" />
</RelativeLayout>