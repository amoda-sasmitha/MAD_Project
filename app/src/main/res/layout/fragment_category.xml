                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                android:elevation="5dp"
                android:text="@string/expenses"
                android:textSize="18sp"
                android:textStyle="bold" />





            <View
                android:id="@+id/date_hr"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_below="@id/account_subTotal"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/date_hr">
            <!-- Start of the component -->
            <RelativeLayout
                android:id="@+id/category01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="16dp"

                    android:layout_marginTop="12dp"
                    android:background="@drawable/circle"
                    android:contentDescription="@string/IconV3" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/category_icon"
                android:elevation="5dp"

                android:text="@string/food_and_beverages"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:textStyle="bold"/>

                <TextView
                    android:id="@+id/category_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/category_text"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/category_icon"
                    android:elevation="5dp"
                    android:text="@string/main_category"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                 android:id="@+id/category02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
