                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@id/category_icon5"
                        android:elevation="5dp"
                        android:text="@string/main_category"
                        android:textSize="13sp" />

                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>


        <!-- - - - - - - - - - - - - -  - - - - - - - - - - - - - - - -  - - - - - - - - -->
        <RelativeLayout
            android:id="@+id/Income_cardView"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card"
            android:elevation="5dp"
            android:paddingBottom="20dp"
            >

            <TextView
                android:id="@+id/category_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:elevation="5dp"
                android:text="@string/income"
                android:textSize="18sp"
                android:textStyle="bold" />





            <View
                android:id="@+id/date_hr2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:layout_below="@id/category_type2"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/date_hr2">
