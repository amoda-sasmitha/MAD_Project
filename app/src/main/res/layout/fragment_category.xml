                        android:backgroundTint="@color/colorPrimaryDark"
                        android:contentDescription="@string/IconV3" />

                    <TextView
                        android:id="@+id/category_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="10dp"

                        android:layout_toEndOf="@id/category_icon3"
                        android:elevation="5dp"
                        android:text="@string/transportation"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category_memo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/category_text3"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@id/category_icon3"
                        android:elevation="5dp"
                        android:text="@string/main_category"
                        android:textSize="13sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/category5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/category_icon5"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="16dp"
