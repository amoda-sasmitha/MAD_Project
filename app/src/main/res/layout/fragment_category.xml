                        android:layout_marginTop="10dp"

                        android:layout_toEndOf="@id/category_icon5"
                        android:elevation="5dp"
                        android:text="@string/ele"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/category_memo5"
