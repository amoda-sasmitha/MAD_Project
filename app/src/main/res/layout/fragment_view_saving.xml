<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSaving"
    android:background="#d8d8d8"
    >

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape"
        android:gravity="center">

    </View>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Bank Account"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_marginStart="16dp"
        android:text="Rs 12450.00"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:text="28 June 2019"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        />
    <RelativeLayout
        android:layout_below="@+id/textView12"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:paddingBottom="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="5dp"
        >
        <TextView
            android:id="@+id/savingNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/saving_details"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"

            />
        <View
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:background="#d8d8d8"
            android:layout_below="@id/savingNameView"
           />

        <RelativeLayout
            android:id="@+id/saving01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:paddingBottom="5dp"

            >


            <TextView
                android:id="@+id/saving_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saving for Desk Setup"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:textStyle="bold"

                />

            <ProgressBar
                android:layout_below="@id/saving_text"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:minHeight="10dp"
                android:minWidth="200dp"
                android:progress="50"
                android:progressTint="@color/green"
                android:background="#F8F8F8"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                />
            <TextView
                android:id="@+id/current_amount_text"
                android:layout_below="@id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 34000.00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="28dp"
                />

            <TextView
                android:id="@+id/full_amount_text"
                android:layout_below="@id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Rs 45000.00"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginRight="28dp"
                />

        </RelativeLayout>



        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saving01"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:justificationMode="inter_word"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incidication.ut labore et dolore magna aliqua. Ut enim ad minim veniam"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_text"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="Initial Amount"
            android:textSize="16sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount_text"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="0dp"
            android:text="Rs.2350.00"
            android:textSize="14sp"

            />
        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/account"
           android:paddingVertical="0dp"
            android:paddingHorizontal="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/card"
            android:backgroundTint="@color/blue"
            android:text="Add Transaction"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            />

        <ImageButton

            android:id="@+id/delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/account"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/add_btn"
            android:background="@drawable/circle"

            android:src="@drawable/delete_btn" />
    </RelativeLayout>

</RelativeLayout>